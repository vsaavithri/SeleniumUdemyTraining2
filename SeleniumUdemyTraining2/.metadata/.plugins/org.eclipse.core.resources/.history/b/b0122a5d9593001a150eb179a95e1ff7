          <param name="ConversionPattern" value="%d{dd/MM/yyyy HH:mm:ss} %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
    
     <!-- HTML Appender -->
    
   <appender name="htmlAppender" class="org.apache.log4j.DailyRollingFileAppender">
